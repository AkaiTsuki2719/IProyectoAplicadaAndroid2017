<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuActivity" >

    <ImageButton
        android:id="@+id/imgBtnAbout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgBtnProfile"
        android:layout_marginRight="31dp"
        android:background="#fff"
        android:src="@drawable/aboutus" />

    <ImageButton
        android:id="@+id/imgBtnMyBuys"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imgBtnAbout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:background="#fff"
        android:src="@drawable/mybuys" />

    <ImageButton
        android:id="@+id/imgBtnBuy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imgBtnMyBuys"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/imgBtnMyBuys"
        android:adjustViewBounds="false"
        android:background="#fff"
        android:src="@drawable/buy" />

    <ImageButton
        android:id="@+id/imgBtnProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/imgBtnBuy"
        android:layout_below="@+id/imgBtnBuy"
        android:layout_marginTop="92dp"
        android:background="#fff"
        android:src="@drawable/profile" />

</RelativeLayout>